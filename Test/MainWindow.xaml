<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="DeS Emulator Save File Organiser" Height="381.356" Width="645.551">
    <Grid Margin="0,0,0,-1" RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="397*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Pictures/wallpaper2.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.105"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <ListBox x:Name="lstBoxSavefiles" HorizontalAlignment="Left" Height="250" Margin="91,27,0,0" VerticalAlignment="Top" Width="138" BorderBrush="{x:Null}" Foreground="Black" Grid.Column="1"/>
        <TextBlock x:Name="tblkHeader2" HorizontalAlignment="Left" Margin="114,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Text="Save Files" FontFamily="Poor Richard" FontSize="24" Grid.Column="1" Foreground="Black" FontStyle="Italic"/>
        <Button x:Name="btnCreateSavefile" Content="Create Savefile" HorizontalAlignment="Left" Margin="22,188,0,0" VerticalAlignment="Top" Width="121" Click="BtnCreateSavefile_Click" Height="35" FontFamily="Poor Richard" FontStyle="Italic" FontSize="18" RenderTransformOrigin="0.5,0.5" Background="White">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.269"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="txboxSavefileName" HorizontalAlignment="Left" Height="35" Margin="22,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="White"/>
        <Button x:Name="btnImportSavestate" Content="Import Save" HorizontalAlignment="Left" Margin="267,129,0,0" VerticalAlignment="Top" Width="93" Click="BtnImportSavestate_Click" Height="50" FontFamily="Poor Richard" FontSize="16" Grid.Column="1" FontStyle="Italic" Background="White"/>
        <TextBlock x:Name="tblkErrorMessage" HorizontalAlignment="Left" Margin="247,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="45" Width="140" FontSize="18" FontFamily="Poor Richard" FontStyle="Italic" Grid.Column="1" Foreground="Red"/>
        <ListBox x:Name="lstboxSegments" HorizontalAlignment="Left" Height="250" Margin="160,27,0,0" VerticalAlignment="Top" Width="127" SelectionChanged="LstboxSegments_SelectionChanged" Grid.ColumnSpan="2" Background="White"/>
        <TextBlock x:Name="tblkHeader1" HorizontalAlignment="Left" Margin="179,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90" Text="Segments" FontFamily="Poor Richard" FontSize="24" Foreground="Black" FontStyle="Italic" Grid.ColumnSpan="2"/>
        <Button x:Name="btnCreateSegment" Content="Create Segment" HorizontalAlignment="Left" Margin="22,59,0,0" VerticalAlignment="Top" Width="120" Height="35" FontSize="18" FontFamily="Poor Richard" Click="BtnCreateSegment_Click" Background="White" FontStyle="Italic"/>
        <TextBox x:Name="txboxCreateSegment" HorizontalAlignment="Left" Height="35" Margin="22,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="White"/>
        <Button x:Name="btnUpdateSave" Content="Update Save" HorizontalAlignment="Left" Margin="267,204,0,0" VerticalAlignment="Top" Width="93" Height="50" FontFamily="Poor Richard" FontSize="16" Click="BtnUpdateSave_Click" Background="White" Grid.Column="1" FontStyle="Italic"/>
        <Button x:Name="btnDeleteSegment" Content="Delete Segment" HorizontalAlignment="Left" Margin="163,282,0,0" VerticalAlignment="Top" Width="120" FontFamily="Poor Richard" FontSize="18" Click="BtnDeleteSegment_Click" Background="White" FontStyle="Italic" Height="35" Grid.ColumnSpan="2"/>
        <Button x:Name="btnDeleteSavefile1" Content="Delete Savefile" HorizontalAlignment="Left" Margin="99,282,0,0" VerticalAlignment="Top" Width="122" FontFamily="Poor Richard" Height="35" FontSize="18" Click="BtnDeleteSavefile1_Click" Background="White" FontStyle="Italic" Grid.Column="1"/>

    </Grid>
</Window>
