<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="381.356" Width="645.551">
    <Grid Margin="0,0,0,-1" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.105"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <ListBox x:Name="lstBoxSavefiles" HorizontalAlignment="Left" Height="269" Margin="169,47,0,0" VerticalAlignment="Top" Width="211"/>
        <TextBlock x:Name="tblkHeader2" HorizontalAlignment="Left" Margin="176,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163" Text="Save File List" FontFamily="Poor Richard" FontSize="24" Foreground="Black" Background="White" FontStyle="Italic"/>
        <Button x:Name="btnCreateSavefile" Content="Create Savefile" HorizontalAlignment="Left" Margin="33,73,0,0" VerticalAlignment="Top" Width="124" Click="BtnCreateSavefile_Click" Height="52" FontFamily="Poor Richard" FontStyle="Italic" FontSize="20" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.269"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="txboxSavefileName" HorizontalAlignment="Left" Height="35" Margin="36,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnImportSavestate" Content="Import Save To Game" HorizontalAlignment="Left" Margin="396,125,0,0" VerticalAlignment="Top" Width="139" Click="BtnImportSavestate_Click" Height="59" FontFamily="Poor Richard" FontSize="16"/>
        <TextBlock x:Name="tblkErrorMessage" HorizontalAlignment="Left" Margin="396,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="73" Width="146" FontSize="24" FontFamily="Times New Roman" FontStyle="Italic"/>

    </Grid>
</Window>
